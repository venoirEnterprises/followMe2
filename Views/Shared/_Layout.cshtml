        <aside id="head1" class="head"></aside>
        <aside id="torso1" class="torso"></aside>
        <aside id="legs1" class="legs"></aside>
        <progress class="standard" id="healthPlayer"></progress>
        <progress class="lives" id="livesPlayer" max="3" style="margin-top:8px!important"></progress>
        <progress class="xp" style="margin-top:16px!important" id="xpPlayer" max="25" value="0"></progress>
    </div>


    <input type="hidden" id="isGame" value="@ViewBag.isGame" placeholder="@ViewBag.isGame" />
    <input type="hidden" id="isCommunity" value="@ViewBag.isCommunity" />
